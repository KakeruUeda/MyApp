<table class='table'>
  <tr>
	  <th>ユーザーネーム</th>
	  <th><%= @user.user_name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= @user.introduction %></th>
  </tr>
</table>

<h1>画像投稿フォーム</h1>
<%= form_with model: @letter, url: public_letters_path do |f| %>
  <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  <h4>説明</h4>
    <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>